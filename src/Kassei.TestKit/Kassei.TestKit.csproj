<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <Title>Kassei.TestKit</Title>
    <Authors>Morten Brudvik</Authors>
    <Description>Wrapper for the XunitContext and extension methods for testing.</Description>
    <PackageProjectUrl>https://github.com/mortenbrudvik/Kassei.TestKit</PackageProjectUrl>
    <RepositoryUrl>https://github.com/mortenbrudvik/Kassei.TestKit</RepositoryUrl>
    <PackageTags>xunit testing</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Ardalis.GuardClauses" Version="4.0.1" />
    <PackageReference Include="XunitContext" Version="3.2.5" />
  </ItemGroup>

</Project>
